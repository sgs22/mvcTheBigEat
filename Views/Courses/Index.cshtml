@model IEnumerable<mvcTheBigEat.Models.Course>

@{
    ViewData["Title"] = "Cooking Courses";
}

<h1>Cooking Courses</h1>
<div class="text-right">
    <a class="btn btn-primary mb-4" asp-area="" asp-controller="Bookings" asp-action="Create">Book Now</a>
</div>

<!--<p>
    <a asp-action="Create">Create New</a>
</p>-->
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Date)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Address)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AvailableSlots)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Description)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Date)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Address)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Price)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.AvailableSlots)
                </td>
                <td>
                    <!--<a asp-action="Edit" asp-route-id="@item.CourseID">Edit</a> | -->
                    <a asp-action="Details" asp-route-id="@item.CourseID">Details</a>
                    <!--<a asp-action="Delete" asp-route-id="@item.CourseID">Delete</a> -->
                </td>
            </tr>
        }
    </tbody>

</table>


